<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todo List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h1>Todos List</h1>
    <a href="/add-todo" class="btn btn-success mb-3">Add Todo</a>
    
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Deadline</th>
          <th>Completed</th>
        </tr>
      </thead>
      <tbody>
        <% todos.forEach(todo => { %>
          <tr>
            <td><%= todo.id %></td>
            <td><%= todo.title %></td>
            <td><%= todo.deadline %></td>
            <td>
              <a href="/toggle/<%= todo.id %>" class="text-decoration-none">
                <input type="checkbox" <%= todo.status ? 'checked' : '' %> onclick="return false;">
                <%= todo.status ? 'Yes' : 'No' %>
              </a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>

